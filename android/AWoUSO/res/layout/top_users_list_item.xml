<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="30dp"
    android:orientation="horizontal"
    android:background="@drawable/list_bg"
    android:padding="5dp">
    
    <TextView    
        android:id="@+id/top_users_place"
        android:layout_alignParentLeft="true"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"     
        android:textSize="12sp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="6dp"
        android:textColor="@color/white"/>
    
    <ImageView 
        android:id="@+id/top_users_avatar"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_toRightOf="@id/top_users_place"
        android:layout_marginRight="5dp"/>
    
    <TextView
        
        android:id="@+id/top_users_full_name"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:textColor="@color/light_blue"
        android:layout_toRightOf="@id/top_users_avatar"/>
    
    <TextView
        
        android:id="@+id/top_users_level"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:text="@string/level"
        android:textColor="@color/white"
        android:layout_marginLeft="2dp"
        android:layout_toRightOf="@id/top_users_full_name"/>
    
    <TextView
        
        android:id="@+id/top_users_level_no"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="14sp"
        android:textColor="@color/light_blue"
        android:layout_alignBaseline="@id/top_users_level"
        android:layout_toRightOf="@id/top_users_level"/>
    
    <TextView
        
        android:id="@+id/top_users_points"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:textSize="12sp"
        android:layout_marginRight="2dp"
        android:textColor="@color/white"
        android:layout_alignParentRight="true"/>
    
</RelativeLayout>